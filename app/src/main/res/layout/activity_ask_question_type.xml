<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_ask_question_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/backdrop">

    <Button
        android:text="@string/China"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/ask_subject"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/ask_grade"
        android:text="@string/grade_1"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ask_subject"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>
    <Button
        android:textColor="@android:color/white"
        android:background="@mipmap/upload"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ask_record"
        android:textSize="20sp"
        android:text="@string/post_question"
        android:textAllCaps="false"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="25dp"
        android:paddingLeft="5dp"/>

