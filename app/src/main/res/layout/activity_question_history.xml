<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backdrop"
    android:orientation="vertical"
    tools:context="com.zun1.whenask.ui.activity.QuestionHistoryActivity">
    <LinearLayout
        android:background="@mipmap/ellipse2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="horizontal">
            <Button
                android:text="@string/history_unfinished"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:background="@mipmap/checked"
                android:id="@+id/question_history_unfinished"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:textAllCaps="false"/>
            <Button
                android:text="@string/history_finished"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:background="@mipmap/unchecked"
                android:id="@+id/question_history_finished"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:textAllCaps="false"/>
        </LinearLayout>
        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/rv_list"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginBottom="12dp"-->
            <!--android:layout_weight="1">-->
        <!--</android.support.v7.widget.RecyclerView>-->
        <FrameLayout
            android:id="@+id/id_layout_to_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="12dp">

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
