<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="5dp"
    fresco:cardBackgroundColor="@android:color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/ellipse">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/answer_history_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@android:color/white"
            fresco:placeholderImageScaleType="fitXY"
            fresco:progressBarImage="@mipmap/progresssbar"
            fresco:progressBarImageScaleType="fitCenter"
            fresco:progressBarAutoRotateInterval="1000"/>
        <TextView
            android:id="@+id/answer_history_text"
            android:text="@string/question_detailed"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginTop="1dp"
            android:background="@mipmap/ellipse"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9">

            <Button
                android:id="@+id/answer_history_play"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="3 3''"
                android:textSize="20sp"
                android:gravity="center_vertical|right"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:background="@mipmap/voice3"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9">

            <TextView
                android:id="@+id/answer_history_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/student_status"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/answer_history_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rank_score"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/answer_notadopt"
                android:background="@mipmap/hengxian"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="@string/time"
                android:id="@+id/answer_history_time"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>